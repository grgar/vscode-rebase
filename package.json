{
  "name": "rebase",
  "displayName": "Git Rebase Shortcuts",
  "description": "Shortcuts for Git rebase editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Keymaps"
  ],
  "contributes": {
    "keybindings": [
      {
        "key": "p",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "cursorMove", "args": { "to": "wrappedLineStart" } },
            { "command": "deleteWordRight" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "pick" } }
          ]
        }
      },
      {
        "key": "r",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "cursorMove", "args": { "to": "wrappedLineStart" } },
            { "command": "deleteWordRight" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "reword" } }
          ]
        }
      },
      {
        "key": "e",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "cursorMove", "args": { "to": "wrappedLineStart" } },
            { "command": "deleteWordRight" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "edit" } }
          ]
        }
      },
      {
        "key": "s",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "cursorMove", "args": { "to": "wrappedLineStart" } },
            { "command": "deleteWordRight" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "squash" } }
          ]
        }
      },
      {
        "key": "f",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "cursorMove", "args": { "to": "wrappedLineStart" } },
            { "command": "deleteWordRight" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "fixup" } } ]
        }
      },
      {
        "key": "b",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "editor.action.insertLineAfter" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "break" } } ]
        }
      },
      {
        "key": "x",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && editorLangId == 'git-rebase'",
        "args": {
          "commands": [
            { "command": "editor.action.insertLineAfter" },
            { "command": "editor.action.insertSnippet", "args": { "snippet": "exec " } },
            { "command": "extension.vim_insert" }
          ]
        }
      }
    ]
  }
}
